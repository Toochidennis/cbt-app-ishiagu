{
  "name": "CBT Ishiagu",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "copy-schema": "xcopy src\\electron\\services\\sqlite\\schema.sql dist-electron\\sqlite\\ /I /Y /S",
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "build:win64": "vite build && electron-builder --win --x64 --publish always",
    "build:win32": "vite build && electron-builder --win --ia32 --publish always"
  },
  "build": {
    "asar": true,
    "appId": "com.nexora.cbt-desktop-app",
    "files": [
      "dist-react",
      "dist-electron"
    ],
    "extraResources": [
      {
        "from": "src/electron/preload.cjs",
        "to": "preload.js"
      },
      {
        "from": "src/electron/services/schema.sql",
        "to": "schema.sql"
      },
      {
        "from": "src/electron/data/",
        "to": "data/"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "perMachine": true,
      "allowElevation": true
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://linkschoolonline.com/assets/downloads/"
      }
    ]
  },
  "author": "ToochiDennis",
  "license": "ISC",
  "description": "CBT",
  "dependencies": {
    "@apollo/client": "^3.13.8",
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@hookform/resolvers": "^5.1.1",
    "@supabase/supabase-js": "^2.50.0",
    "@tailwindcss/vite": "^4.1.10",
    "better-sqlite3": "^12.0.0",
    "classnames": "^2.5.1",
    "cli-truncate": "^4.0.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "echarts": "^5.6.0",
    "electron-store": "^10.1.0",
    "graphql": "^16.11.0",
    "is-online": "^11.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.59.0",
    "react-router-dom": "^6.30.1",
    "react-select": "^5.10.1",
    "react-toastify": "^11.0.5",
    "sweetalert2": "^11.22.2",
    "sweetalert2-react-content": "^5.1.0",
    "tailwindcss": "^4.1.10",
    "uuid": "^11.1.0",
    "yup": "^1.6.1",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@electron/remote": "^2.1.2",
    "@eslint/js": "^9.25.0",
    "@graphql-codegen/cli": "^5.0.7",
    "@graphql-codegen/typescript": "^4.1.6",
    "@graphql-codegen/typescript-operations": "^4.6.1",
    "@graphql-codegen/typescript-react-apollo": "^4.3.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/echarts": "^4.9.22",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@types/yup": "^0.29.14",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "electron": "^36.5.0",
    "electron-builder": "^25.1.8",
    "electron-updater": "^6.6.2",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0"
  }
}
