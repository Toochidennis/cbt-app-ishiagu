{
  "name": "cbt-app-ishiagu",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:electron",
    "dev:react": "vite",
    "dev:electron": "npm run transpile:electron && cross-env NODE_ENV=development electron .",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "transpile:electron": "tsc --project src/electron/tsconfig.json",
    "dist:win64": "npm run transpile:electron && npm run build && electron-builder --win --x64 --publish always",
    "dist:win32": "npm run transpile:electron && npm run build && electron-builder --win --ia32 --publish always"
  },
  "build": {
    "asar": true,
    "appId": "com.nexora.cbt-desktop-app",
    "files": [
      "dist-react",
      "dist-electron"
    ],
    "extraResources": [
      "dist/electron/preload.cjs"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "perMachine": true,
      "allowElevation": true
    },
    "publish": [
      {
        "provider": "generic",
        "url": "https://linkschoolonline.com/assets/downloads/"
      }
    ]
  },
  "author": "ToochiDennis",
  "license": "ISC",
  "description": "CBT",
  "dependencies": {
    "@supabase/supabase-js": "^2.50.0",
    "@tailwindcss/vite": "^4.1.10",
    "better-sqlite3": "^12.0.0",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.13",
    "dotenv": "^16.5.0",
    "electron-store": "^10.1.0",
    "is-online": "^11.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.30.1",
    "tailwindcss": "^4.1.10",
    "zustand": "^5.0.5"
  },
  "devDependencies": {
    "@electron/remote": "^2.1.2",
    "@eslint/js": "^9.25.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react-swc": "^3.9.0",
    "cross-env": "^7.0.3",
    "electron": "^36.5.0",
    "electron-builder": "^25.1.8",
    "electron-updater": "^6.6.2",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5"
  }
}